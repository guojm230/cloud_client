<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.page.WelcomeFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_login_title"
        android:layout_width="291dp"
        android:layout_height="34dp"
        android:layout_marginTop="109dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="@string/text_view_login_title"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id = "@+id/text_view_login_desc"
        android:layout_width="338dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/text_view_login_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textFontWeight="400"
        android:textSize="16sp"
        android:gravity="center"
        android:text="@string/text_view_login_desc"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_login_brand"
        android:layout_width="255dp"
        android:layout_height="241dp"
        android:layout_marginTop="60.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_login_desc"
        app:srcCompat="@drawable/lark_brand"
        />
    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/to_login_btn"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginBottom="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="登录"
        />

</androidx.constraintlayout.widget.ConstraintLayout>